//1)
fun isPalindrome(text: String): Boolean {
    val sb = StringBuilder(text)

    val reverseStr = sb.reverse().toString()

    
    return text.equals(reverseStr, ignoreCase = true)
}

fun main() {
    
    if (isPalindrome("racecar")) {
        println("it's a palindrome")
    } else {
        println("it's not a palindrome")
    }


    if (isPalindrome("car")) {
        println("it's a palindrome")
    } else {
        println("it's not a palindrome")
    } 
  
  
}





//2)
fun main() {  

  println(minSplit(12))
  println(minSplit(57))
  println(minSplit(134))

}


fun minSplit(amount: Int): Int {
    
    var list = mutableListOf(1, 5, 10, 20, 50)
    var size = list.size - 1
    var coins = amount
    var cap = 0
    while(size >= 0){
        
        while(coins >= list[size]){
            coins = coins - list[size]
          	cap = cap + 1
        }
        size = size -1
    } 
   return cap 
}






